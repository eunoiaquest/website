---

<section id="features" class="py-16 md:py-24 bg-secondary">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-quicksand-medium text-foreground sm:text-4xl" style="font-weight:500;">
        Why Choose Eunoia?
      </h2>
      <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">
        Discover the advantages of our gamified screening platform.
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="bg-card text-card-foreground rounded-lg border border-border shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 flex flex-col">
          <div class="flex flex-col items-center text-center p-6 pb-0">
            <div class="mb-4 p-3 rounded-full bg-primary/10 text-primary">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                set:html={feature.icon}
              />
            </div>
            <h3 class="text-xl font-quicksand-medium" style="font-weight:500;">{feature.title}</h3>
          </div>
          <div class="p-6 pt-2 text-center flex-grow">
            <p class="text-sm text-muted-foreground">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
