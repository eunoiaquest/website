---
// Lucide icon SVG paths
const mapPinIcon = '<path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle>';
const mailIcon = '<rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>';
const phoneIcon = '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>';
---

<section id="contact" class="py-16 md:py-24 bg-secondary">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-quicksand-medium text-foreground sm:text-4xl" style="font-weight:500;">
        Get In Touch
      </h2>
      <p class="mt-4 text-lg text-muted-foreground max-w-xl mx-auto">
        Have questions or want to learn more? We'd love to hear from you.
      </p>
    </div>

    <div class="max-w-3xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div class="space-y-6">
          <h3 class="text-2xl font-quicksand-medium text-foreground" style="font-weight:500;">Contact Information</h3>
          <div class="space-y-4 text-muted-foreground">
            <div class="flex items-start space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-1 text-primary flex-shrink-0" set:html={mapPinIcon} />
              <span>GÃ¶ttingen, 37073, Lower Saxony</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0" set:html={mailIcon} />
              <a href="mailto:contact@eunoiaquest.com" class="hover:text-primary transition-colors">
                contact@eunoiaquest.com
              </a>
            </div>
            <div class="flex items-center space-x-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0" set:html={phoneIcon} />
              <span>+49 15238910716</span>
            </div>
          </div>
        </div>

        <!-- Email CTA -->
        <div class="flex flex-col items-center justify-center space-y-6 text-center">
          <p class="text-lg text-muted-foreground">
            Ready to transform your assessments? Reach out to our team directly.
          </p>
          <a
            href="mailto:contact@eunoiaquest.com"
            class="inline-flex items-center justify-center rounded-md bg-primary px-8 py-3 text-sm font-medium text-primary-foreground shadow hover:bg-primary/90 transition-colors gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={mailIcon} />
            Email Us
          </a>
          <!-- Map placeholder -->
          <div class="w-full aspect-video bg-muted rounded-lg overflow-hidden mt-4">
            <div class="w-full h-full flex items-center justify-center text-muted-foreground">
              Map Placeholder
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
